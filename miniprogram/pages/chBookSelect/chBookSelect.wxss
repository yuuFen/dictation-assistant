/* 书本选项 */
#chBookSelect .module-container {
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  box-sizing: border-box;
  flex-direction:row;
  justify-content: center;
  margin-top: 90rpx;
}
#chBookSelect .module-container .box-wrapper{
  height: 300rpx;
  width: 200rpx;
  margin: 0 60rpx;
  margin-bottom: 64rpx;
} 
/* 服务选项 */
#chBookSelect .module-container .box-wrapper .servicebox{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  text-align: center;
}
#chBookSelect .module-container .box-wrapper .servicebox .box-img{
  height:250rpx;
  width: 100%;
  margin-bottom: 5rpx;
}
