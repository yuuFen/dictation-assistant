.tab{ padding: 20rpx 0;}
.tab-nav{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
#jianbian {
  background:linear-gradient(to left,#FAF0E6,#ccc,#FAF0E6);
  height: 1px;

}
.tab-nav .tab-nav-c view{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  background: #FAF0E6;
  width: 90px;
  font-size: 30rpx;
  text-align: center;
  color: #000;
}
.tab-nav view.on{
  background: #FAF0E6;
  color: rgb(255, 201, 18);
}
.tip {
  color: #aaa;
  text-align: center;
  font-size: 35rpx;
}
