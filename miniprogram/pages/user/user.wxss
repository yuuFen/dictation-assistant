page {
  background-color: #f8f8f8;
}

.head{
  height: 300rpx;
  width: 100%;
  background-color: #FAF0E6;
  padding-top: 50rpx;
}
.photo {
  display: none;
  margin: 0 auto;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  z-index: 99;
}
.login {
  display: flex;
  margin: 0 auto;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  z-index: 99;

}
.name{
  text-align: center;
  margin-top: 30rpx;
  color: #000;
}
.disappear {
  display: none;
}
.show {
    display: flex;
}


.content {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 100%;
  height: 700rpx;
}
.servicebox{
  display: flex;
  height: 80rpx;
  width: 100%;
  background: #fff;
  padding: 10rpx 0;
  align-items:center;
  margin-bottom: 1px;
}

.servicebox:nth-child(2n){
  background-color: #f8f8f8;
}
.icon{
  height: 60rpx;
  width: 60rpx;
  margin-left: 60rpx;
}
.text{
  margin-left: 30rpx;
}